{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "dom"
    ],
    "baseUrl": "/src",
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": ["src"]
}